@model IEnumerable<NguyenAnhTuanSachOnline.NHAXUATBAN>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Tạo mới","Create","NhaXuatBan")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.TenNXB)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DiaChi)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DienThoai)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TenNXB)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DiaChi)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DienThoai)
            </td>
            <td>
                @Html.ActionLink("Sửa", "Edit", new { id = item.MaNXB }) |
                @Html.ActionLink("Chi Tiết", "Details", "NhaXuatBan", new { id = item.MaNXB }, null) |
                @Html.ActionLink("Xóa", "Delete", new { id = item.MaNXB })
            </td>
        </tr>
    }

</table>
